<% if values[:strategy] == 'managed_pvc' %>

kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  namespace: <%= values[:release_name] %>
  name: telem-db-pvc
  labels:
    managed_by: nectar
    app: telem-db
  finalizers: []
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi

---

apiVersion: apps/v1
kind: Deployment
metadata:
  namespace: <%= values[:release_name] %>
  name: telem-db
  labels:
    managed_by: nectar
    app: telem-db
spec:
  replicas: 1
  selector:
    matchLabels:
      managed_by: nectar
      app: telem-db
  template:
    metadata:
      labels:
        managed_by: nectar
        app: telem-db
    spec:
      restartPolicy: Always
      containers:
        - image: mongo
          name: mongodb
          ports:
            - containerPort: <%= values[:port] %>
          resources:  {}
          volumeMounts:
            - mountPath: /data/db
              name: telem-db-volume
      volumes:
        - name: telem-db-volume
          persistentVolumeClaim:
            claimName: telem-db-pvc

---

kind: Service
apiVersion: v1
metadata:
  namespace: <%= values[:release_name] %>
  name: telem-db
  labels:
    managed_by: nectar
    app: telem-db
spec:
  selector:
    managed_by: nectar
    app: telem-db
  ports:
    - name: main
      port: <%= values[:port] %>
      targetPort: <%= values[:port] %>

<% end %>