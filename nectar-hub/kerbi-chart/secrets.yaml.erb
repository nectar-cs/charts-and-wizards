<% pg_sec = values[:storage][:secrets] %>
<% app_sec = values[:app][:secrets] %>

<% if internal_storage? %>
  <% if pg_secret_ready? %>
    apiVersion: v1
    kind: Secret
    metadata:
      namespace: hub
      name: hub-pg
    data:
      user: <%= secrefy(pg_sec[:user]) %>
      password: <%= secrefy(pg_sec[:password]) %>
    <% end %>
<% end %>

---

<% if app_secret_ready? %>
  apiVersion: v1
  kind: Secret
  metadata:
    namespace: hub
    name: hub-app
  data:
    secret-key-base: <%= secrefy(app_sec[:key_base]) %>
<% end %>